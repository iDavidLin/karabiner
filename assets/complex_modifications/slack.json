{
  "title": "vim for slack",
  "rules": [{
    "description": "Ctrl + h/j to navigato to next unread",
    "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "h",
          "modifiers": {
            "mandatory": [
              "left_control"
            ]
          }
        },
        "to": [{
          "key_code": "down_arrow",
          "modifiers": [
            "left_option",
            "left_shift"
          ]
        }],
        "conditions": [{
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "com.tinyspeck.slackmacgap"
          ],
          "file_paths": [
            "/Applications/Slack.app/Contents/MacOS/Slack"
          ]
        }]
      },
      {
        "type": "basic",
        "from": {
          "key_code": "j",
          "modifiers": {
            "mandatory": [
              "left_control"
            ]
          }
        },
        "to": [{
          "key_code": "up_arrow",
          "modifiers": [
            "left_option",
            "left_shift"
          ]
        }],
        "conditions": [{
          "type": "frontmost_application_if",
          "bundle_identifiers": [
            "com.tinyspeck.slackmacgap"
          ],
          "file_paths": [
            "/Applications/Slack.app/Contents/MacOS/Slack"
          ]
        }]
      }
    ]
  }]
}