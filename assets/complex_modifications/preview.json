{
  "title": "vim for application",
  "rules": [{
      "description": "Change + h/j/k/l to Arrows",
      "manipulators": [{
          "type": "basic",
          "from": {
            "key_code": "h"
          },
          "to": [{
            "key_code": "left_arrow"
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": [
              "com.apple.Preview",
              "com.apple.iBooksX",
	      "com.amazon.Kindle"
            ],
            "file_paths": [
              "/Applications/Preview.app/Contents/MacOS/Preview",
              "/Applications/iBooks.app/Contents/MacOS/iBooks",
	      "/Applications/Kindle.app/Contents/MacOS/Kindle"
            ]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j"
          },
          "to": [{
            "key_code": "down_arrow"
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": [
              "com.apple.Preview",
              "com.apple.iBooksX",
	      "com.amazon.Kindle"
            ],
            "file_paths": [
              "/Applications/Preview.app/Contents/MacOS/Preview",
              "/Applications/iBooks.app/Contents/MacOS/iBooks",
	      "/Applications/Kindle.app/Contents/MacOS/Kindle"
            ] 
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k"
          },
          "to": [{
            "key_code": "up_arrow"
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": [
              "com.apple.Preview",
              "com.apple.iBooksX",
	      "com.amazon.Kindle"
            ],
            "file_paths": [
              "/Applications/Preview.app/Contents/MacOS/Preview",
              "/Applications/iBooks.app/Contents/MacOS/iBooks",
	      "/Applications/Kindle.app/Contents/MacOS/Kindle"
            ]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l"
          },
          "to": [{
            "key_code": "right_arrow"
          }],
          "conditions": [{
            "type": "frontmost_application_if",
            "bundle_identifiers": [
              "com.apple.Preview",
              "com.apple.iBooksX",
	      "com.amazon.Kindle"
            ],
            "file_paths": [
              "/Applications/Preview.app/Contents/MacOS/Preview",
              "/Applications/iBooks.app/Contents/MacOS/iBooks",
	      "/Applications/Kindle.app/Contents/MacOS/Kindle"
            ]
          }]
        }
      ]
    }
  ]
}
